{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      1,
      "double"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": [
      2,
      {
        "allow": [
          "log",
          "error"
        ]
      }
    ]
  }
}
